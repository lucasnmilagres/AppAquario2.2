<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/main_menu_generalbackground_color">

    <ImageView
        android:id="@+id/Main_menu_header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_menu_header_height_dimension"
        android:scaleType="fitXY"
        android:src="@drawable/menu_header"
        android:background="@color/main_menu_headerbackground_color"/>

    <LinearLayout
        android:id="@+id/Main_menu_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/menu_body_background">
        <LinearLayout
            android:id="@+id/Main_menu_buttons_container"
            android:layout_width="@dimen/main_menu_container_width"
            android:layout_height="@dimen/main_menu_container_height"
            android:orientation="vertical"
            android:background="@drawable/menu_container_background">
            <LinearLayout
                android:id="@+id/menu_row1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/menu_row1_column1"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="@dimen/main_menu_buttons_dimension"
                        android:layout_height="@dimen/main_menu_buttons_dimension"
                        android:layout_gravity="center"
                        android:id="@+id/imageButton1"
                        android:background="@color/main_menu_buttonsbackground_color"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu_lamp_icon"
                        android:onClick="SendLightningActivity" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_row1_column2"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="@dimen/main_menu_buttons_dimension"
                        android:layout_height="@dimen/main_menu_buttons_dimension"
                        android:layout_gravity="center"
                        android:id="@+id/imageButton2"
                        android:background="@color/main_menu_buttonsbackground_color"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu_temperature_icon"
                        android:onClick="SendTemperatureActivity" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_row1_column3"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="@dimen/main_menu_buttons_dimension"
                        android:layout_height="@dimen/main_menu_buttons_dimension"
                        android:layout_gravity="center"
                        android:id="@+id/imageButton3"
                        android:background="@color/main_menu_buttonsbackground_color"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu_void_icon" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_row2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/menu_row2_column1"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="@dimen/main_menu_buttons_dimension"
                        android:layout_height="@dimen/main_menu_buttons_dimension"
                        android:layout_gravity="center"
                        android:id="@+id/imageButton4"
                        android:background="@color/main_menu_buttonsbackground_color"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu_void_icon" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_row2_column2"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="@dimen/main_menu_buttons_dimension"
                        android:layout_height="@dimen/main_menu_buttons_dimension"
                        android:layout_gravity="center"
                        android:id="@+id/imageButton5"
                        android:background="@color/main_menu_buttonsbackground_color"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu_void_icon" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_row2_column3"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="@dimen/main_menu_buttons_dimension"
                        android:layout_height="@dimen/main_menu_buttons_dimension"
                        android:layout_gravity="center"
                        android:id="@+id/imageButton6"
                        android:background="@color/main_menu_buttonsbackground_color"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu_void_icon" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_row3"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/menu_row3_column1"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="@dimen/main_menu_buttons_dimension"
                        android:layout_height="@dimen/main_menu_buttons_dimension"
                        android:layout_gravity="center"
                        android:id="@+id/imageButton7"
                        android:background="@color/main_menu_buttonsbackground_color"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu_void_icon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_row3_column2"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="@dimen/main_menu_buttons_dimension"
                        android:layout_height="@dimen/main_menu_buttons_dimension"
                        android:layout_gravity="center"
                        android:id="@+id/imageButton8"
                        android:background="@color/main_menu_buttonsbackground_color"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu_void_icon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_row3_column3"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="@dimen/main_menu_buttons_dimension"
                        android:layout_height="@dimen/main_menu_buttons_dimension"
                        android:layout_gravity="center"
                        android:id="@+id/imageButton9"
                        android:background="@color/main_menu_buttonsbackground_color"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu_settings_icon"
                        android:onClick="SendSettingsActivity"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>